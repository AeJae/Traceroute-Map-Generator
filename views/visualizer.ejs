<h1 id="changeableTitle">Traceroute Visualizer</h1>
<div id="map"></div>
<div id="titleInputBox">
    <form onsubmit="updateTitle(this)" action="javascript:void(0)" id="form">
        <label for="newTitle">Set Title</label>
        <input type="text" name="newTitle" id="newTitle">
        <button type="submit" name="confirm" id="confirm">Confirm</button>
    </form>
</div>

<div>
    <button class="neoButton" id="refresh">Refresh JSON Data</button>
    <button class="neoButton" id="openPopups">Open Popups</button>
</div>

<script defer>
    const title = document.getElementById("changeableTitle");
    function updateTitle(formData) {
        if (formData.newTitle.value !== "") {
            title.textContent = formData.newTitle.value;
        } else {
            title.textContent = "Traceroute Visualizer";
        }
        formData.newTitle.value = "";
        document.getElementById("newTitle").blur();
    }
</script>